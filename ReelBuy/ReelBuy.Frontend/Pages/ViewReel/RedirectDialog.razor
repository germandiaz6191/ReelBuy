<MudDialog>
    <DialogContent>
        <MudPaper Class="d-flex align-items-center p-2" Elevation="0">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" Size="Size.Large" Class="me-4" />
            <MudText Typo="Typo.h6">@Description</MudText>
        </MudPaper>
    </DialogContent>

    <DialogActions>
        <MudSpacer />
        <MudButton Variant="Variant.Text" Color="Color.Default" OnClick="() => MudDialog.Cancel()">
            @DialigSecondButton
        </MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="() => MudDialog.Close()">
            @DialigFirstButton
        </MudButton>
    </DialogActions>
</MudDialog>