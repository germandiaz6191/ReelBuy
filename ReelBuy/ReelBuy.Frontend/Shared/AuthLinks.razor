<AuthorizeView>
    <Authorized>
        <MudContainer Style="width: 18rem; margin-top: 2rem; margin-bottom: 2rem;">
            @if (!string.IsNullOrEmpty(photoUser))
            {
                <MudContainer Class="d-flex justify-content-center mb-3">
                    <MudBadge Color="Color.Success" Overlap="true" Bordered="true" Class="position-relative">
                        <MudAvatar Size="Size.Large" Class="mb-3 mx-auto d-block">
                            <MudImage Src="@photoUser"></MudImage>
                        </MudAvatar>
                    </MudBadge>
                </MudContainer>
            }
            <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Primary">@Localizer["Hello"], @context.User.Identity!.Name</MudText>
            <MudPaper Elevation="1" Class="d-flex justify-content-center align-content-center">
                <MudStack Spacing="2">
                    <MudButton Variant="Variant.Text" OnClick="EditAction" Color="Color.Primary">@Localizer["EditUserProfile"] <MudIcon Icon="@Icons.Material.Filled.Edit" /> </MudButton>
                    <MudButton Variant="Variant.Text" OnClick="ShowModalLogOut" Color="Color.Primary">@Localizer["Logout"] <MudIcon Icon="@Icons.Material.Filled.Login" /> </MudButton>
                </MudStack>
            </MudPaper>
        </MudContainer>
    </Authorized>
    <NotAuthorized>
        <MudContainer Style="width: 18rem; margin-top: 2rem; margin-bottom: 2rem;">
            <MudStack Spacing="2">
                <MudButton 
                    Href="/register" 
                    Variant="Variant.Text" 
                    Color="Color.Primary" 
                    StartIcon="@Icons.Material.Filled.HowToReg">
                    @Localizer["Register"]
                </MudButton>

                <MudMenuItem 
                    OnClick="ShowModalLogIn" 
                    Icon="@Icons.Material.Filled.Login" 
                    Color="Color.Primary">
                    @Localizer["Login"]
                </MudMenuItem>
            </MudStack>
        </MudContainer>
    </NotAuthorized>
</AuthorizeView>



