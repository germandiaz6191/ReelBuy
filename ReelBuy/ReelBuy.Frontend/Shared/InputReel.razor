﻿<div class="mb-3">
    <label class="form-label">@Label</label>
    <div class="input-group">
        <input type="text"
               class="form-control"
               placeholder="@Localizer["SelectFile"]"
               readonly="readonly"
               value="@reelFileName" />
        <label class="input-group-btn">
            <span class="btn btn-primary">
                @Localizer["Search"]<InputFile OnChange="OnChange" class="d-none" accept=".mp4" />
            </span>
        </label>
    </div>
</div>

<div>
    @if (reelBase64 is not null)
    {
        <div>
            <div style="margin: 10px">
                <video width="320" height="240" controls>
                    <source src="data:video/mp4;base64,@reelBase64" type="video/mp4">
                        Tu navegador no soporta la reproducción de video.
                </video>
            </div>
        </div>
    }

    @if (ReelURL is not null)
    {
        <div>
            <div style="margin: 10px">
                <img src="data:video/mp4;base64,@ReelURL" style="height:200px;" />
            </div>
        </div>
    }
</div>